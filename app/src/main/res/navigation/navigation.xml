<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/dashboard_fragment">

    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="edu.bluejack23_2.rhangfhindel.fragments.DashboardFragment"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboard_fragment_to_room_transaction_fragment"
            app:destination="@id/room_transaction_fragment" />

        <action
            android:id="@+id/action_dashboard_fragment_to_rang_list_fragment"
            app:destination="@id/rang_list_fragment" />

    </fragment>

    <fragment
        android:id="@+id/room_transaction_fragment"
        android:name="edu.bluejack23_2.rhangfhindel.fragments.RoomTransactionFragment"
        tools:layout="@layout/fragment_room_transaction" />

    <fragment
        android:id="@+id/rang_list_fragment"
        android:name="edu.bluejack23_2.rhangfhindel.fragments.RangListFragment"
        tools:layout="@layout/fragment_rang_list" />

    <fragment
        android:id="@+id/profile_fragment"
        android:name="edu.bluejack23_2.rhangfhindel.fragments.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

</navigation>